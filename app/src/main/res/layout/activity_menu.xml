<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity">

    <Button
            android:text="Tic Tac TOE!"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tic" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_orange_dark" android:onClick="selectGame"
            android:textAllCaps="false" android:textSize="36sp" android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="0.49" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/memorama"/>
    <Button
            android:text="Memorama"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/memorama" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_green_dark"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintBottom_toBottomOf="parent" android:textAllCaps="false" android:textSize="36sp"
            android:textColor="@color/white" android:onClick="selectGame" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tic"/>
</android.support.constraint.ConstraintLayout>